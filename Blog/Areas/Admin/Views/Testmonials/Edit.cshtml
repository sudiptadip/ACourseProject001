@model Testmonials

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .dropdown-toggle, .bootstrap-select {
        width: 100% !important;
    }
</style>

<div class="container" style="margin-top: 100px">
    <form method="post">
        <input asp-for="Id" hidden class="form-control" placeholder="">

        <div class="modal-body">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3" style="width: 100%;">
                <label style="display: block" asp-for="Title" class="form-label">Select Gender</label>
                <select asp-for="Gender">
                    <option value="MAIL">Mail</option>
                    <option value="FEMAIL">Femail</option>
                </select>
                <span class="text-danger" asp-validation-for="Gender"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" id="description-editor"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" placeholder="">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Star" class="form-label"></label>
                <input asp-for="Star" class="form-control" placeholder="">
                <span class="text-danger" asp-validation-for="Star"></span>
            </div>
        </div>
        <div class="ms-4">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>
</div>