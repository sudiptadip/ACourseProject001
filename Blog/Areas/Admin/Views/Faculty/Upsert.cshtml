@model Faculty

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .dropdown-toggle, .bootstrap-select {
        width: 100% !important;
    }
</style>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="modal-header">
            <h5 class="modal-title" id="categoryModalLabel">Add / Edit Faculty</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            @if (Model.Id != 0 && !string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-3"  >
                    <img style="width: 70px;" src="@Model.ImageUrl" alt="Faculty Image" class="img-thumbnail" style="max-width: 200px;" />
                </div>
            }
            <input type="hidden" id="facultyId" name="Id" value="@Model.Id" />
            <div class="mb-3">
                <label asp-for="FacultyName" class="form-label"></label>
                <input asp-for="FacultyName" class="form-control" placeholder="">
                <span class="text-danger" asp-validation-for="FacultyName"></span>
            </div>
            <div class="mb-3" style="width: 100%;">
                <label style="display: block" asp-for="IsShowMentorPage" class="form-label">Show Faculty On Mentor Page</label>
                <select asp-for="IsShowMentorPage">
                    <option value="true">Show</option>
                    <option value="false">Not Show</option>
                </select>
                <span class="text-danger" asp-validation-for="IsShowMentorPage"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" id="description-editor"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SortedOrder" class="form-label"></label>
                <input asp-for="SortedOrder" class="form-control" placeholder="">
                <span class="text-danger" asp-validation-for="SortedOrder"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Faculty Image</label>
                <input name="file" type="file" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                <small class="form-text text-muted">Allowed formats: jpg, png, gif. Max size: 2MB.</small>
            </div>
        </div>
        <div class="ms-4">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- CKEditor Script -->
    <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>

    <script>
        // Initialize CKEditor

        ClassicEditor
            .create(document.querySelector('#description-editor'))
            .catch(error => {
                console.error(error);
            });

        document.querySelector('form').addEventListener('submit', function (e) {
            var fileInput = document.querySelector('input[name="file"]');
            if (fileInput.files.length > 0) {
                var file = fileInput.files[0];
                var validTypes = ['image/jpeg', 'image/png', 'image/gif'];
                var maxSize = 2 * 1024 * 1024; // 2MB

                if (!validTypes.includes(file.type)) {
                    e.preventDefault();
                    alert('Only JPG, PNG, and GIF files are allowed.');
                } else if (file.size > maxSize) {
                    e.preventDefault();
                    alert('File size must be less than 2MB.');
                }
            }
        });
    </script>
}