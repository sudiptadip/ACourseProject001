@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@* <h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} *@


<div class="edu-breadcrumb-area breadcrumb-style-3">
    <div class="container">
        <div class="breadcrumb-inner">
            <ul class="edu-breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="separator"><i class="icon-angle-right"></i></li>
                <li class="breadcrumb-item active" aria-current="page">
                    Forgot password
                </li>
            </ul>
        </div>
    </div>
</div>

<!--=====================================-->
<!--=          Login Area Start         =-->
<!--=====================================-->
<section class="account-page-area section-gap-equal">
    <div class="container position-relative">
        <div class="row g-5 justify-content-center">
            <div class="col-lg-5">
                <div class="login-form-box">
                    <h3 class="text-center mb-4">Forgot password</h3>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email">Enter Your Email<span class="text-danger">*</span></label>
                            <input asp-for="Input.Email" id="current-log-email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="edu-btn btn-medium">Reset Password<i class="icon-4"></i></button>
                        </div>

                        <p>Login Account <a asp-area="Identity" asp-page="/Account/Login">Login</a></p>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}