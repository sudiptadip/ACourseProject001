@section Styles {
    <style>
        .failed-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 80vh;
            text-align: center;
        }

        .failed-icon {
            font-size: 80px;
            color: #dc3545;
        }

        .failed-message {
            font-size: 24px;
            font-weight: 500;
            color: #333;
        }
    </style>
}

    <div class="container">
        <div class="failed-container">
            <div class="failed-icon">
                <i class="bi bi-x-circle-fill"></i>
            </div>
            <h1 class="text-danger mt-3">Payment Failed</h1>
            <p class="failed-message mt-2">Unfortunately, your payment could not be processed. Please try again.</p>
            <a class="btn btn-dark mt-4" asp-area="Customer" asp-controller="Home" asp-action="Index">Back to Home</a>
        </div>
    </div>
