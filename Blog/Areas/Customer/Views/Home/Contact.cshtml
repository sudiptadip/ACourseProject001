<!--=       Contact Me Area Start       =-->
<!--=====================================-->
<section class="contact-us-area">
    <div class="container">
        <div class="row g-5">
            <div class="col-xl-4 col-lg-6">
                <div class="contact-us-info">
                    <h3 class="heading-title">
                        We're Always Eager to Hear From You!
                    </h3>
                    <ul class="address-list">
                        <li>
                            <h4 class="title">Address</h4>
                            <h6 class="text-danger">Center 1</h6>
                            <p>
                                Girish Park
                                Metro Tower
                                170, C.R. Avenue,
                                2 nd floor,
                                Near Mahajati Sadan,
                                M. G. Road Metro Station
                                Kolkata 700007

                            </p>
                        </li>

                        <li>
                            <h6 class="text-danger">Center 2</h6>
                            <p>
                                Hazra Centre :
                                43/1, 2nd Floor, Kalighat Road, On Harish Mukherjee Road, Near Jai Hind Bhawan,
                                Jatin Das Park Metro Station, Kolkata : 700026
                            </p>
                        </li>


                        <li>
                            <h5 class="title">Email</h5>
                            <p>
                                <a href="mailto:topclasses10@gmail.com" target="_blank">topclasses10@gmail.com</a>
                            </p>
                        </li>
                        <li>
                            <h5 class="title">Phone</h5>
                            <p>
                                <span><a href="tel:+919836832223" target="_blank">+91-9836832223 /</a></span>

                                <span>
                                    <a href="tel:+919051399390" target="_blank">+91-9051399390</a>
                                </span>
                            </p>
                        </li>
                    </ul>
                    <ul class="social-share">
                        <li>
                            <a href="#"><i class="icon-share-alt"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-facebook"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-twitter"></i></a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-linkedin2"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="offset-xl-2 col-lg-6">
                <div class="contact-form form-style-2">
                    <div class="section-title">
                        <h4 class="title">Get In Touch</h4>
                        <p>
                            If you had any query please contact us.
                        </p>
                    </div>
                    <form  method="post">
                        <div class="row row--10">
                            <div class="form-group col-12">
                                <input asp-for="Name" placeholder="Your name" />
                                <span asp-validation-for="Name" class="text-danger" ></span>
                            </div>
                            <div class="form-group col-12">
                                <input type="email" asp-for="Email" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger" ></span>
                            </div>
                            <div class="form-group col-12">
                                <input type="tel" asp-for="PhoneNumber" placeholder="Phone number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger" ></span>
                            </div>
                            <div class="form-group col-12">
                                <textarea  asp-for="Message"  cols="30" rows="4"
                                          placeholder="Your message"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="form-group col-12">
                                <button class="rn-btn edu-btn btn-medium submit-btn" type="submit">
                                    Submit Message <i class="icon-4"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
