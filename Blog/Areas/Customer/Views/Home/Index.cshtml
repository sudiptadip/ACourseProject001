<div class="edu-course-area course-area-3 section-gap-large">
    <div class="container">
        <div class="section-title section-center" data-sal-delay="150" data-sal="slide-up" data-sal-duration="800">
            <!-- <span class="pre-title">our Blogs</span> -->
        </div>
        <div class="isotope-wrapper mt-4">
            <div class="isotop-button isotop-filter">
                
                @{
                    int j = 1;
                }
                @foreach (var item in Model.BlogCategoryViewModel)
                {
                    <button data-filter=".@item.CategoryName" class='@(j == 1 ? "is-checked" : "")'>
                        <span class="filter-text"> @item.CategoryName </span>
                    </button>                    
                   { j++; }
                }
            </div>
            <div class="row g-5 isotope-list">

                @foreach (var item in Model.BlogCategoryViewModel)
                {
                    foreach (var blog in item.Blogs)
                    {
                        <div class="col-lg-3 col-md-6 isotope-item @item.CategoryName">
                            <div class="edu-event event-style-1">
                                <div class="inner bx-shadow">
                                    <div class="thumbnail">
                                        <a asp-area="Customer" asp-controller="Home" asp-action="BlogDetails" asp-route-id="@blog.Id" >
                                            <img src="@blog.ImageUrl" alt="Blog Images" />
                                        </a>
                                    </div>
                                    <div class="content">
                                        <div class="event-date">
                                            <span class="month">@blog.CreatedOn.ToString("mm")</span>
                                            <span class="month">@blog.CreatedOn.ToString("yyyy")</span>
                                        </div>
                                        <h5 class="title">
                                            <a asp-area="Customer" asp-controller="Home" asp-action="BlogDetails" asp-route-id="@blog.Id">@blog.Title</a>
                                        </h5>
                                        <p>
                                            @Html.Raw(blog.Description)
                                        </p>

                                        <div class="read-more-btn">
                                            <a class="edu-btn btn-small" asp-area="Customer" asp-controller="Home" asp-action="BlogDetails" asp-route-id="@blog.Id">Learn More <i class="icon-4"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="event-view-all-btn" data-sal-delay="150" data-sal="slide-up" data-sal-duration="1200">
            <h6 class="view-text">
                For All Blogs
                <a href="#" class="btn-transparent">View All <i class="icon-4"></i></a>
            </h6>
        </div>
    </div>
    <ul class="shape-group">
        <li class="shape-1">
            <img class="shape-light" data-depth="2" src="~/images/others/map-shape-3.png" alt="Shape" />
            <img class="shape-dark" data-depth="2" src="~/images/others/3-Home-1.png" alt="Shape" />
        </li>
        <li class="shape-2">
            <img class="shape-light" data-depth="2" src="~/images/others/map-shape-3.png" alt="Shape" />
            <img class="shape-dark" data-depth="2" src="~/images/others/dark-map-shape-3.png" alt="Shape" />
        </li>
    </ul>
</div>

