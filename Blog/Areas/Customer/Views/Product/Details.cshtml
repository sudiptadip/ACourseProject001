@section Scripts {
    <script>
        $(document).ready(function () {

            function calculatePrice() {
                var modeOfLecture = $('#modeOfLecture').val();
                var validity = $('#validity').val();
                var views = $('#views').val();
                var productId = @Model.Id;

                console.log({
                    ProductId: productId,
                    ModeOfLecture: modeOfLecture,
                    ValidityInMonths: parseInt(validity),
                    Views: parseInt(views)
                });

                $.ajax({
                    url: '/Customer/Product/CalculatePrice',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        ProductId: productId,
                        ModeOfLecture: modeOfLecture,
                        ValidityInMonths: parseInt(validity),
                        Views: parseInt(views)
                    }),
                    success: function (data) {

                        console.log(data, "NewPriceData");

                        $('#calculatedPrice').text(data.price);
                        $('#calculatedDiscountPrice').text(data.discountPrice);

                        var discountPercentage = ((data.price - data.discountPrice) / data.price) * 100;
                        $('#discountPercentage').text(Math.round(discountPercentage) + '%');
                    },
                    error: function (xhr, status, error) {
                        console.error('Error calculating price:', error);
                    }
                });
            }

            $('.form-select').change(function () {
                calculatePrice();
            });

            calculatePrice();
        });
    </script>
}