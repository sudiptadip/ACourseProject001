@section Scripts {
    <script>
        $(document).ready(function () {

            function calculatePrice() {
                var modeOfLecture = $('#modeOfLecture').val();
                var validity = $('#validity').val();
                var views = $('#views').val();
                var attempt = $('#attempt').val();
                var productId = @Model.Product.Id;


                $.ajax({
                    url: '/Customer/Product/CalculatePrice',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        ProductId: productId,
                        ModeOfLecture: modeOfLecture,
                        ValidityInMonths: validity,
                        Views: views,
                        Attempt: attempt
                    }),
                    success: function (data) {
                        if (data.price <= 0 || data.discountPrice <= 0) 
                        {
                            $('#calculatedPrice').text(data.price);
                            $('#calculatedDiscountPrice').text("Not available");
                            $('#btnSubmit').prop('disabled', true);
                        }
                        else
                        {
                            $('#calculatedPrice').text(data.price);
                            $('#calculatedDiscountPrice').text(data.discountPrice);
                            var discountPercentage = ((data.price - data.discountPrice) / data.price) * 100;
                            $('#discountPercentage').text(Math.round(discountPercentage) + '%');
                            $('#btnSubmit').prop('disabled', false);
                        }
                        
                    },
                    error: function (xhr, status, error) {
                        console.error('Error calculating price:', error);
                    }
                });
            }

            $('.form-select').change(function () {
                calculatePrice();
            });

            calculatePrice();
        });
    </script>
}