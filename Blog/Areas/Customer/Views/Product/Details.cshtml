@model ProductDetailsVM

<section class="edu-section-gap course-details-area">
    <div class="container">
        <form asp-action="AddToCart" asp-controller="Cart" asp-area="Customer" method="post">
            <input name="productId" value="@Model.Product.Id" hidden />
