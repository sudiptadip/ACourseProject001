                                    <select name="validity" class="form-select" id="validity" aria-label="Validity">
                                        @foreach (var item in Model.Validity)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-12">
                                <div class="mb-4">
                                    <label for="views" class="form-label formLabel">Views</label>
                                    <select name="views" class="form-select" id="views" aria-label="Views">
                                        @foreach (var item in Model.Views)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-12">
                                <div class="mb-4">
                                    <label for="views" class="form-label formLabel">Attempt</label>
                                    <select name="attempt" class="form-select" id="attempt" aria-label="Attempt">
                                        @foreach (var item in Model.Attempt)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center  mt-4">

                            <div class="buy-now-btn pr-20 d-none">
                                <button type="button" class="btn btn-sm details-btn">
                                    <i class="fa-solid fa-credit-card"></i> Buy Now
                                </button>
                            </div>

                            <div class="add-cart-btn pr-20">
                                <button type="submit" class="btn btn-sm details-btn" id="btnSubmit">
                                    <i class="fa-solid fa-cart-shopping"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>


